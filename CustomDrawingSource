local CustomDrawing = {}
CustomDrawing.__index = CustomDrawing

-- Helper function to get or create a ScreenGui in CoreGui
local function getOrCreateScreenGui()
    local CoreGui = game:GetService("CoreGui")
    local existingGui = CoreGui:FindFirstChild("CustomDrawingGui")
    
    if existingGui then
        return existingGui -- Reuse existing ScreenGui
    else
        local screenGui = Instance.new("ScreenGui")
        screenGui.Name = "CustomDrawingGui"
        screenGui.Parent = CoreGui
        return screenGui
    end
end

-- Base class for drawing objects
local DrawingObject = {}
DrawingObject.__index = DrawingObject

function DrawingObject.new()
    local self = setmetatable({}, DrawingObject)
    self.screenGui = getOrCreateScreenGui()  -- Reuse or create a ScreenGui
    return self
end

-- Helper function to dynamically update changed properties only
local function setPropertyAndUpdate(self, key, value)
    rawset(self, key, value)
    if self.update then
        self:update(key) -- Pass the key to only update the relevant part
    end
end

------------------------------------------------
-- Line class (inherits from DrawingObject)
------------------------------------------------
local Line = {}
Line.__index = Line

function Line.new()
    local self = setmetatable(DrawingObject.new(), Line)

    -- Create the frame for the line
    self.frame = Instance.new("Frame")
    self.frame.AnchorPoint = Vector2.new(0.5, 0.5)
    self.frame.BorderSizePixel = 0
    self.frame.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- Red line for visibility
    self.frame.Parent = self.screenGui

    -- Default properties for the line
    self.Thickness = 1
    self.Transparency = 0
    self.From = Vector2.new(0, 0)
    self.To = Vector2.new(100, 100)

    self:update()
    return self
end

function Line:update(changedProperty)
    if changedProperty == "From" or changedProperty == "To" or changedProperty == nil then
        local deltaX = self.To.X - self.From.X
        local deltaY = self.To.Y - self.From.Y
        local distance = math.sqrt(deltaX * deltaX + deltaY * deltaY)
    
        local midX = (self.From.X + self.To.X) / 2
        local midY = (self.From.Y + self.To.Y) / 2
    
        self.frame.Size = UDim2.new(0, distance, 0, self.Thickness)
        self.frame.Position = UDim2.new(0, midX, 0, midY)
        self.frame.Rotation = math.deg(math.atan2(deltaY, deltaX))
    end
    if changedProperty == "Transparency" or changedProperty == nil then
        self.frame.BackgroundTransparency = self.Transparency
    end
    if changedProperty == "Thickness" or changedProperty == nil then
        self.frame.Size = UDim2.new(0, self.frame.Size.X.Offset, 0, self.Thickness)
    end
end

setmetatable(Line, {
    __newindex = function(self, key, value)
        setPropertyAndUpdate(self, key, value)
    end
})

------------------------------------------------
-- Text class (inherits from DrawingObject)
------------------------------------------------
local Text = {}
Text.__index = Text

function Text.new()
    local self = setmetatable(DrawingObject.new(), Text)

    -- Create the text label
    self.label = Instance.new("TextLabel")
    self.label.BackgroundTransparency = 1  -- No background
    self.label.Parent = self.screenGui

    -- Default properties
    self.Text = "Sample Text"
    self.Size = 24
    self.Transparency = 0
    self.Position = Vector2.new(100, 100)
    self.Center = false
    self.Outline = false
    self.OutlineColor = Color3.new(0, 0, 0)
    self.Font = Enum.Font.SourceSans

    self:update()
    return self
end

function Text:update(changedProperty)
    if changedProperty == "Text" or changedProperty == nil then
        self.label.Text = self.Text
    end
    if changedProperty == "Size" or changedProperty == nil then
        self.label.TextSize = self.Size
    end
    if changedProperty == "Transparency" or changedProperty == nil then
        self.label.TextTransparency = self.Transparency
    end
    if changedProperty == "Outline" or changedProperty == "OutlineColor" or changedProperty == nil then
        self.label.TextStrokeTransparency = self.Outline and 0 or 1
        self.label.TextStrokeColor3 = self.OutlineColor
    end
    if changedProperty == "Position" or changedProperty == nil then
        self.label.Position = UDim2.new(0, self.Position.X, 0, self.Position.Y)
    end
end

setmetatable(Text, {
    __newindex = function(self, key, value)
        setPropertyAndUpdate(self, key, value)
    end
})

------------------------------------------------
-- Circle class (inherits from DrawingObject)
------------------------------------------------
local Circle = {}
Circle.__index = Circle

function Circle.new()
    local self = setmetatable(DrawingObject.new(), Circle)

    -- Create a Frame to simulate the circle using UICorner
    self.frame = Instance.new("Frame")
    self.frame.AnchorPoint = Vector2.new(0.5, 0.5)
    self.frame.BorderSizePixel = 0
    self.frame.Parent = self.screenGui

    -- Add UICorner to round the frame
    local corner = Instance.new("UICorner", self.frame)
    corner.CornerRadius = UDim.new(1, 0)

    -- Default properties
    self.Transparency = 0
    self.Thickness = 1
    self.Radius = 50
    self.Position = Vector2.new(200, 200)
    self.Filled = true

    self:update()
    return self
end

function Circle:update(changedProperty)
    if changedProperty == "Radius" or changedProperty == "Position" or changedProperty == nil then
        self.frame.Size = UDim2.new(0, self.Radius * 2, 0, self.Radius * 2)
        self.frame.Position = UDim2.new(0, self.Position.X, 0, self.Position.Y)
    end
    if changedProperty == "Transparency" or changedProperty == nil then
        self.frame.BackgroundTransparency = self.Transparency
    end
    if changedProperty == "Filled" or changedProperty == "Thickness" or changedProperty == nil then
        if not self.Filled then
            self.frame.BackgroundTransparency = 1
            self.frame.BorderSizePixel = self.Thickness
            self.frame.BorderColor3 = Color3.fromRGB(255, 255, 255)
        else
            self.frame.BorderSizePixel = 0
        end
    end
end

setmetatable(Circle, {
    __newindex = function(self, key, value)
        setPropertyAndUpdate(self, key, value)
    end
})

------------------------------------------------
-- Square class (inherits from DrawingObject)
------------------------------------------------
local Square = {}
Square.__index = Square

function Square.new()
    local self = setmetatable(DrawingObject.new(), Square)

    -- Create the frame for the square
    self.frame = Instance.new("Frame")
    self.frame.AnchorPoint = Vector2.new(0.5, 0.5)
    self.frame.BorderSizePixel = 0
    self.frame.Parent = self.screenGui

    -- Default properties
    self.Transparency = 0
    self.Thickness = 1
    self.Size = Vector2.new(100, 100)
    self.Position = Vector2.new(200, 200)
    self.Filled = true

    self:update()
    return self
end

function Square:update(changedProperty)
    if changedProperty == "Size" or changedProperty == "Position" or changedProperty == nil then
        self.frame.Size = UDim2.new(0, self.Size.X, 0, self.Size.Y)
        self.frame.Position = UDim2.new(0, self.Position.X, 0, self.Position.Y)
    end
    if changedProperty == "Transparency" or changedProperty == nil then
        self.frame.BackgroundTransparency = self.Transparency
    end
    if changedProperty == "Filled" or changedProperty == "Thickness" or changedProperty == nil then
        if not self.Filled then
            self.frame.BackgroundTransparency = 1
            self.frame.BorderSizePixel = self.Thickness
            self.frame.BorderColor3 = Color3.fromRGB(255, 255, 255)
        else
            self.frame.BorderSizePixel = 0
        end
    end
end

setmetatable(Square, {
    __newindex = function(self, key, value)
        setPropertyAndUpdate(self, key, value)
    end
})

------------------------------------------------
-- Triangle class (inherits from DrawingObject)
------------------------------------------------
local Triangle = {}
Triangle.__index = Triangle

function Triangle.new()
    local self = setmetatable(DrawingObject.new(), Triangle)

    -- Create the triangle using 3 frames to form a triangular shape
    self.frame = Instance.new("Frame")
    self.frame.AnchorPoint = Vector2.new(0.5, 0.5)
    self.frame.BorderSizePixel = 0
    self.frame.Parent = self.screenGui

    -- Default properties
    self.Transparency = 0
    self.Thickness = 1
    self.PointA = Vector2.new(0, 0)
    self.PointB = Vector2.new(50, 100)
    self.PointC = Vector2.new(100, 0)
    self.Filled = true

    self:update()
    return self
end

function Triangle:update(changedProperty)
    -- Placeholder for proper triangle drawing logic. Currently using a frame.
    if changedProperty == "PointA" or changedProperty == "PointB" or changedProperty == "PointC" or changedProperty == nil then
        local midX = (self.PointA.X + self.PointB.X + self.PointC.X) / 3
        local midY = (self.PointA.Y + self.PointB.Y + self.PointC.Y) / 3
        self.frame.Size = UDim2.new(0, 100, 0, 100) -- Placeholder size
        self.frame.Position = UDim2.new(0, midX, 0, midY)
    end
    if changedProperty == "Transparency" or changedProperty == nil then
        self.frame.BackgroundTransparency = self.Transparency
    end
end

setmetatable(Triangle, {
    __newindex = function(self, key, value)
        setPropertyAndUpdate(self, key, value)
    end
})

------------------------------------------------
-- CustomDrawing creation logic
------------------------------------------------
function CustomDrawing.new(drawType)
    if drawType == "Line" then
        return Line.new()
    elseif drawType == "Text" then
        return Text.new()
    elseif drawType == "Circle" then
        return Circle.new()
    elseif drawType == "Square" then
        return Square.new()
    elseif drawType == "Triangle" then
        return Triangle.new()
    else
        error("Invalid draw type: " .. tostring(drawType))
    end
end

return CustomDrawing
